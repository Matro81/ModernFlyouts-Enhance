<Page x:Class="ModernFlyouts.Navigation.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ModernFlyouts" xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:uiwpf="clr-namespace:iNKORE.UI.WPF.Controls;assembly=iNKORE.UI.WPF"
      xmlns:controls="clr-namespace:ModernFlyouts.Controls"
      xmlns:utils="clr-namespace:ModernFlyouts.Utilities"
      xmlns:resx="clr-namespace:ModernFlyouts.Properties"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800">
    <controls:ScrollViewerEx>
        <uiwpf:SimpleStackPanel Spacing="10" Margin="20">
            <TextBlock FontWeight="SemiBold" Style="{DynamicResource TitleTextBlockStyle}"
                       Text="{x:Static local:Program.AppName}" />
            <Image Source="/Assets/Images/ModernFlyouts_128.png" HorizontalAlignment="Left" Height="128" />
            <TextBlock TextWrapping="Wrap" Text="{x:Static resx:Strings.About_AppDescription}" />
            <TextBlock Margin="0,5,0,0">
                <Run Text="{x:Static resx:Strings.About_Version}" />
                <Bold>
                    <Run Text="{x:Static local:Program.AppVersion}" />
                </Bold>
            </TextBlock>
            <StackPanel Margin="0,10,0,0">
                <TextBlock TextWrapping="Wrap" FontStyle="Italic" Text="{x:Static resx:Strings.About_OriginalRepo_ThankYou}" />
                <ui:HyperlinkButton Content="{x:Static resx:Strings.About_OriginalRepo}"
                                    NavigateUri="https://github.com/ModernFlyouts-Community/ModernFlyouts" />
            </StackPanel>
            
            <ui:HyperlinkButton Content="{x:Static resx:Strings.About_GitHub}"
                                NavigateUri="https://github.com/ModernFlyouts-Community/ModernFlyouts" />
            
            <Button Style="{DynamicResource ButtonRevealStyle}" Margin="0,10,0,0"
                    Content="{x:Static resx:Strings.About_RateAndReview}" Click="RateAndReviewButton_Click" />
        </uiwpf:SimpleStackPanel>
    </controls:ScrollViewerEx>
</Page>

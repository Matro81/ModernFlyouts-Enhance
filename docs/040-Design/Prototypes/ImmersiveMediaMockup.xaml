<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="#202020" CornerRadius="8" Width="400" Height="250" ClipToBounds="True">
    <!-- Immersive Background Layer -->
    <Grid>
        <Image Source="placeholder_album_art.png" Stretch="UniformToFill" Opacity="0.85" />
        
        <!-- Vignette for Readability -->
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#00000000" Offset="0.4" />
                    <GradientStop Color="#CC000000" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Content Layer -->
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- Top Bar (Integrated) -->
                <RowDefinition Height="*" />    <!-- Spacer -->
                <RowDefinition Height="Auto" /> <!-- Metadata -->
                <RowDefinition Height="Auto" /> <!-- Transport -->
            </Grid.RowDefinitions>

            <!-- Metadata -->
            <StackPanel Grid.Row="2" Margin="0,0,0,16">
                <TextBlock Text="Mai Tôi Đi (Cover)" FontSize="20" FontWeight="SemiBold" Foreground="White" />
                <TextBlock Text="Ai Đang Phiêu" FontSize="14" Foreground="#BBFFFFFF" />
            </StackPanel>

            <!-- Transport (Floating Glass Bar) -->
            <Border Grid.Row="3" Background="#20FFFFFF" CornerRadius="8" Padding="12,8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="⏮" Background="Transparent" BorderBrush="Transparent" Foreground="White" Margin="10,0" />
                    <Button Content="⏸" BorderThickness="0" Background="#40FFFFFF" Padding="12,4" Margin="10,0" />
                    <Button Content="⏭" Background="Transparent" BorderBrush="Transparent" Foreground="White" Margin="10,0" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Border>
